{
  "compilerOptions": {
    "target": "ES6",                    /* Specify the ECMAScript target version (e.g., ES6) */
    "module": "CommonJS",               /* Specify the module system (e.g., CommonJS) */
    "outDir": "./dist",                 /* Specify the output directory for compiled JavaScript */
    "rootDir": "./src",                 /* Specify the root directory for TypeScript source files */
    "strict": true,                     /* Enable strict type checking */
    "esModuleInterop": true,            /* Enable compatibility with CommonJS modules */
    "skipLibCheck": true,               /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent casing of file names */
    "sourceMap": true,                  /* Generate source maps for better debugging */
    "resolveJsonModule": true,          /* Enable importing JSON files as modules */
    "declaration": true,               /* Generate declaration (.d.ts) files */
    "declarationDir": "./types",        /* Specify the directory for declaration files */
    "baseUrl": ".",                    /* Base directory to resolve non-relative module names */
    "paths": {
      "*": ["node_modules/*", "src/types/*"] /* Define path mappings for custom modules */
    }
  },
  "include": [
    "src/**/*.ts"                     /* Specify the files to be included for compilation */
  ],
  "exclude": [
    "node_modules"                    /* Specify directories to be excluded from compilation */
  ]
}
